<div class="container">
  <h2 class="text-center m-2">{{game.game_name}}</h2>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-12">
      <div class="card text-center m-2">
        <img
          src="/images/{{game.filename}}"
          class="card-img-top"
          alt="..."
        />
        <div
          class="card-body d-flex flex-column align-content-center justify-content-center bg-secondary"
        >
          <h5 class="card-title">{{game.game_name}}</h5>
          <p class="card-text">{{game.genre.genre_name}}</p>
          <a
            href="/new-post/{{game.id}}"
            class="btn btn-primary btn-success"
          >Create Post</a>
        </div>
      </div>
    </div>
    <div class="col-md-8 col-12">
      <div class="row">
        {{#each posts as |post|}}
        {{> post-full}}
        {{/each}}
      </div>
    </div>
  </div>
</div>