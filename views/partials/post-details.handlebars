<div class="col-lg-3 col-md-6 col-12">
  <div class="card m-2">
    <a class="post-container" href="/posts/{{id}}">
      <div class="card-body">
        <h5 class="card-title">{{game.game_name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">By: {{user.username}}</h6>
        <h6 class="card-subtitle mb-2 text-muted">Session Time: {{format_date session_time}}</h6>
        <p class="card-text">{{post_text}}</p>
      </div>
    </a>
  </div>
</div>
